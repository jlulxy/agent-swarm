# OpenAI 配置
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1

# Claude 配置
ANTHROPIC_API_KEY=your-anthropic-api-key

# 服务配置
HOST=0.0.0.0
PORT=8000
DEBUG=false

# CORS 允许的前端地址（逗号分隔，默认允许本地开发地址）
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ========== JWT 认证配置 ==========
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRE_HOURS=24

# ========== memU 记忆系统配置 ==========

# 模式: disabled (关闭), local (本地 SDK), cloud (云端 API)
MEMU_MODE=disabled

# 云端模式配置
# MEMU_API_KEY=your-memu-api-key
# MEMU_BASE_URL=https://api.memu.so

# 本地模式 LLM 配置 (默认复用 OPENAI_API_KEY/OPENAI_BASE_URL)
# MEMU_LLM_BASE_URL=https://api.openai.com/v1
# MEMU_LLM_API_KEY=your-api-key
# MEMU_LLM_CHAT_MODEL=gpt-4o-mini
# MEMU_LLM_EMBED_MODEL=text-embedding-3-small
# MEMU_LLM_CLIENT_BACKEND=sdk

# 本地模式数据库: inmemory / postgresql
# MEMU_DB_PROVIDER=inmemory
# MEMU_DB_URL=postgresql://postgres:postgres@localhost:5432/memu

# 检索配置
# MEMU_RETRIEVE_METHOD=rag
# MEMU_RETRIEVE_TIMEOUT=5.0
# MEMU_MEMORIZE_TIMEOUT=30.0

# ========== 数据存储配置 ==========

# 存储类型: sqlite, mysql, postgresql, memory
STORAGE_TYPE=sqlite

# SQLite 配置（默认）
SQLITE_PATH=data/eac.db

# MySQL 配置（可选）
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_USER=root
# MYSQL_PASSWORD=your-password
# MYSQL_DATABASE=emergent_agent_cluster

# PostgreSQL 配置（可选）
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=your-password
# POSTGRES_DATABASE=emergent_agent_cluster

# 连接池配置
# DB_POOL_SIZE=5
# DB_MAX_OVERFLOW=10
# DB_POOL_TIMEOUT=30

# 调试选项
# DB_ECHO_SQL=false
# DB_AUTO_CREATE_TABLES=true
